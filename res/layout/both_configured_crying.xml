<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_margin="2dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/widget_background">
    <LinearLayout
        android:id="@+id/widget_title"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_height="30dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/left_title"
            style="@style/CellText"
            android:layout_weight="0.5"
            android:layout_height="fill_parent"
            android:layout_width="0dp"/>
        <TextView
            android:id="@+id/right_title"
            style="@style/CellText"
            android:layout_weight="0.5"
            android:layout_height="fill_parent"
            android:layout_width="0dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/title_separator"
        android:layout_below="@id/widget_title"
        android:background="@android:color/black"
        android:layout_height="2dp"
        android:layout_width="fill_parent"/>
    <FrameLayout
        android:id="@+id/vertical_separator"
        android:layout_below="@id/title_separator"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:layout_height="fill_parent"
        android:layout_width="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/title_separator"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.167"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/left_time"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
            <TextView
                android:id="@+id/right_time"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
        </LinearLayout>
        <FrameLayout
            android:background="@android:color/black"
            android:layout_height="2dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.167"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/left_wet_diaper"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
            <TextView
                android:id="@+id/right_wet_diaper"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
        </LinearLayout>
        <FrameLayout
            android:background="@android:color/black"
            android:layout_height="2dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.167"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/left_bm_diaper"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
            <TextView
                android:id="@+id/right_bm_diaper"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
        </LinearLayout>
        <FrameLayout
            android:background="@android:color/black"
            android:layout_height="2dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.167"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/left_sleep"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
            <TextView
                android:id="@+id/right_sleep"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
        </LinearLayout>
        <FrameLayout
            android:background="@android:color/black"
            android:layout_height="2dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.167"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/left_crying"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
            <TextView
                android:id="@+id/right_crying"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
        </LinearLayout>
        <FrameLayout
            android:background="@android:color/black"
            android:layout_height="2dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.167"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/left_custom"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
            <TextView
                android:id="@+id/right_custom"
                style="@style/CellText"
                android:layout_weight="0.5"
                android:layout_height="fill_parent"
                android:layout_width="0dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
